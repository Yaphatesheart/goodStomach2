<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.goodStomach.dao.KindMapper">

    <select id="selectAll" resultType="com.goodStomach.entity.Kind">
		select * from tbl_kind
	</select>

    <select id="selectById" parameterType="java.lang.Long" resultType="com.goodStomach.entity.Kind">
		select * from tbl_kind where id=#{id}
	</select>

    <insert id="addOne" parameterType="com.goodStomach.entity.Kind">
		insert into tbl_kind(id,name,message) values(#{id},#{name},#{message})
	</insert>

    <update id="updateOne" parameterType="com.goodStomach.entity.Kind">
		update tbl_kind set name=#{name},message=#{message}
		where id=#{id}
	</update>

    <delete id="deleteOne" parameterType="java.lang.Long">
		delete from tbl_kind where id=#{id}
	</delete>
</mapper>